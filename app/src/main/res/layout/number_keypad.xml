<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="1">

        <!--prediction part-->
        <LinearLayout
            android:id="@+id/llPredictionPart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <!--prediction number-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1">


                    <android.support.v7.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="3dp">

                        <TextView
                            android:id="@+id/tvPreNum1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text=" ?"
                            android:fontFamily="@font/heebo"
                            android:background="#696464"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="25sp" />



                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="3dp">

                        <TextView
                            android:id="@+id/tvPreNum2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=" ?"
                            android:gravity="center"
                            android:fontFamily="@font/heebo"
                            android:background="#696464"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="25sp" />


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="3dp">

                        <TextView
                            android:id="@+id/tvPreNum3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=" ?"
                            android:gravity="center"
                            android:fontFamily="@font/heebo"
                            android:background="#696464"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="25sp" />


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="3dp">

                        <TextView
                            android:id="@+id/tvPreNum4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=" ?"
                            android:gravity="center"
                            android:fontFamily="@font/heebo"
                            android:background="#696464"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="25sp" />


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="3dp">

                        <TextView
                            android:id="@+id/tvPreNum5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=" ?"
                            android:gravity="center"
                            android:fontFamily="@font/heebo"
                            android:background="#696464"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="25sp"/>


                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvPreNumShowHints"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="show your final result"
                        android:padding="10dp"
                        android:textAlignment="center"/>
                </LinearLayout>


            </LinearLayout>

            <!--maintain formate-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"/>

        </LinearLayout>


        <!--user input part-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <!--input-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:gravity="center">

                <!--number-->
                <android.support.v7.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="3dp">

                    <TextView
                        android:id="@+id/tvInput1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="*"
                        android:fontFamily="@font/heebo"
                        android:textColor="#000000"
                        android:textSize="20sp" />


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="3dp">

                    <TextView
                        android:id="@+id/tvInput2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="*"
                        android:gravity="center"
                        android:fontFamily="@font/heebo"
                        android:textColor="#000000"
                        android:textSize="20sp" />


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="3dp">

                    <TextView
                        android:id="@+id/tvInput3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="*"
                        android:gravity="center"
                        android:fontFamily="@font/heebo"
                        android:textColor="#000000"
                        android:textSize="20sp" />


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="3dp">

                    <TextView
                        android:id="@+id/tvInput4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="*"
                        android:gravity="center"
                        android:fontFamily="@font/heebo"
                        android:textColor="#000000"
                        android:textSize="20sp" />


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!--question-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvQues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_slab"
                    android:textAlignment="center"
                    android:text="Hints"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/fullNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <!--key pad-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#F5080F1D"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_weight="2">

        <!--number-->
        <LinearLayout
            android:id="@+id/llKeyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_weight="1"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/key1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:fontFamily="@font/roboto"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/key2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:fontFamily="@font/roboto"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/key3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:fontFamily="@font/roboto"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/key4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4"
                    android:fontFamily="@font/roboto"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/key5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:fontFamily="@font/roboto"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/key6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:fontFamily="@font/roboto"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/key7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7"
                    android:fontFamily="@font/roboto"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/key8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:fontFamily="@font/roboto"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/key9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:fontFamily="@font/roboto"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"/>

            </LinearLayout>

        </LinearLayout>

        <!--backspace and next-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="1dp">

                <ImageView
                    android:id="@+id/keyBackpress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_keyboard_backspace_black_24dp"
                    android:padding="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/keyNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEXT"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>



        </LinearLayout>




    </LinearLayout>



</LinearLayout>